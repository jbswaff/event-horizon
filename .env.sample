# Event Horizon Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=8080
DISABLE_MINUTES=10
SHOW_LOG_LINK=true

# Log Directory
LOG_DIR=/var/logs/event-horizon

# Pi-hole Configuration
PIHOLE_COUNT=1

# Pi-hole 1
PIHOLE_1_NAME=pihole-primary
PIHOLE_1_URL=http://192.168.1.100:80 # REPLACE ME
PIHOLE_1_APP_PASSWORD=your_password_here # REPLACE ME

